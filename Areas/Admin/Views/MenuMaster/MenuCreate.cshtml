@model MasterApplication.Areas.Admin.Models.MenuMasterModel
@{ ViewData["Title"] = "Menu Create";
    Layout = "~/Pages/Shared/_Layout.cshtml"; }

<div class="breadcrumb-header justify-content-between">
    <div>
        <h4 class="content-title mb-2">Menu Create</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body ">
                <div class="pd-5 pd-sm-5 bg-gray-100">

                    <form asp-action="MenuCreate" asp-controller="MenuMaster" class="form-horizontal">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label class="control-label">Menu Name</label>
                                <input asp-for="MenuName" class="form-control form-control-sm mandatory" autocomplete="off"/>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Menu Description</label>
                                <input asp-for="MenuDesc" class="form-control form-control-sm mandatory" autocomplete="off"/>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Parent Menu</label>
                                <select id="drpEmpList" asp-for="Code" class="form-control form-control-sm">
                                    @foreach (var menu in ViewBag.ParentMenu)
                                    {
                        <option value=@menu.Code>@menu.MenuName</option>
}
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label class="control-label">Area Name</label>
                                <input asp-for="AREANAME" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label class="control-label">Controller Name</label>
                                <input asp-for="CONTROLLERNAME" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label class="control-label">Action Name</label>
                                <input asp-for="ACTIONNAME" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label class="control-label">Menu Icon</label>
                                <input asp-for="MenuIcon" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label class="control-label">Menu Srno</label>
                                <input asp-for="MenuSrno" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="bd-example">
                                        <button type="submit" id="btnSubmit" onclick="return CheckMandatory();" class="btn btn-outline-primary btn-sm mb-1">
                                            <i class="fe fe-check me-2"></i>Submit
                                        </button>
                                        <a class="btn btn-outline-danger btn-sm mb-1" href="/Admin/MenuMaster/Index">
                                            <i class="fe fe-arrow-left me-2"></i>
                                            Back
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @*<script src="~/PageJS/UserMaster.js" asp-append-version="true"></script>*@

    @if (TempData["Message"] != null)
    {
<script type="text/javascript">
    $(document).ready(function () {
         if ('@TempData["Message"].ToString().Split('|')[0]' == "error") {
            toastr.error('@TempData["Message"].ToString().Split('|')[1]');
        }
        else if ('@TempData["Message"].ToString().Split('|')[0]' == "warning") {
            toastr.warning('@TempData["Message"].ToString().Split('|')[1]');
        }
        else if ('@TempData["Message"].ToString().Split('|')[0]' == "info") {
            toastr.info('@TempData["Message"].ToString().Split('|')[1]');
        }

    })
</script>
}
}
